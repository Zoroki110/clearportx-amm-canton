{
  "name": "clearportx-amm-canton",
  "version": "1.0.0",
  "description": "ClearportX AMM DEX on Canton Network",
  "keywords": [
    "canton",
    "daml",
    "amm",
    "dex",
    "defi",
    "blockchain"
  ],
  "author": "ClearportX Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clearportx/clearportx-amm-canton"
  },
  "scripts": {
    "setup": "npm install && cd frontend && npm install && cd ../backend && ./gradlew build",
    "build": "npm run build:daml && npm run build:backend && npm run build:frontend",
    "build:daml": "cd daml && daml build",
    "build:backend": "cd backend && ./gradlew build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:daml && npm run test:backend && npm run test:frontend",
    "test:daml": "cd daml && daml test",
    "test:backend": "cd backend && ./gradlew test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "./test/e2e/run-tests.sh",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && ./gradlew bootRun",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "docker-compose up",
    "start:detached": "docker-compose up -d",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "clean": "npm run clean:daml && npm run clean:backend && npm run clean:frontend",
    "clean:daml": "cd daml && rm -rf .daml/dist",
    "clean:backend": "cd backend && ./gradlew clean",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "deploy:local": "./infrastructure/scripts/deploy-local.sh",
    "deploy:devnet": "./infrastructure/scripts/deploy-devnet.sh",
    "deploy:mainnet": "./infrastructure/scripts/deploy-mainnet.sh",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health": "curl -s http://localhost:8080/actuator/health | jq .",
    "metrics": "curl -s http://localhost:8080/actuator/prometheus",
    "init:local": "./infrastructure/scripts/init-pools.sh",
    "backup": "./infrastructure/scripts/backup.sh",
    "verify": "./infrastructure/scripts/verify-deployment.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
